{
  "name": "love-languages-polish",
  "version": "1.0.0",
  "description": "Love Languages - Polish for Couples",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:blog": "cd blog && npm run dev",
    "build": "vite build && cd blog && npm install && npm run build && cp -r ../dist/* .vercel/output/static/ && mkdir -p ../.vercel/output && cp -r .vercel/output/* ../.vercel/output/",
    "build:app": "vite build",
    "build:blog": "cd blog && npm run build",
    "preview": "vite preview",
    "import-content": "node scripts/import-content.cjs",
    "generate-article": "node --env-file=.env --import=tsx scripts/generate-article.ts",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "cap:sync": "npm run build:app && npx cap sync",
    "cap:ios": "npx cap open ios",
    "cap:build:ios": "npm run build:app && npx cap sync ios && npx cap open ios"
  },
  "dependencies": {
    "@capacitor/cli": "^8.0.1",
    "@capacitor/core": "^8.0.1",
    "@capacitor/haptics": "^8.0.0",
    "@capacitor/ios": "^8.0.1",
    "@capacitor/network": "^8.0.0",
    "@capacitor/status-bar": "^8.0.0",
    "@google/genai": "*",
    "@google/generative-ai": "^0.24.1",
    "@mdx-js/react": "^3.1.1",
    "@mdx-js/rollup": "^3.1.1",
    "@phosphor-icons/react": "^2.1.10",
    "@stripe/stripe-js": "^8.6.1",
    "@supabase/supabase-js": "^2.39.8",
    "@types/dompurify": "^3.0.5",
    "dompurify": "^3.3.1",
    "i18next": "^25.7.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-easy-crop": "^5.5.6",
    "react-i18next": "^16.5.2",
    "react-router-dom": "^6.22.3",
    "remark-frontmatter": "^5.0.0",
    "remark-gfm": "^4.0.1",
    "resend": "^6.7.0",
    "stripe": "^20.1.2"
  },
  "devDependencies": {
    "@anthropic-ai/sdk": "^0.39.0",
    "@playwright/test": "^1.58.0",
    "@tailwindcss/postcss": "^4.1.18",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.23",
    "dotenv": "^17.2.3",
    "jsdom": "^27.4.0",
    "playwright": "^1.57.0",
    "postcss": "^8.5.6",
    "sharp": "^0.34.5",
    "tailwindcss": "^4.1.18",
    "tsx": "^4.19.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "vite-plugin-pwa": "^1.2.0",
    "vitest": "^4.0.16"
  }
}
