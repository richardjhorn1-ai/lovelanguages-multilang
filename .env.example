# ===========================================
# LOVE LANGUAGES - Environment Variables
# ===========================================
# Copy this file to .env.local and fill in your values
# NEVER commit .env.local to git!

# Supabase - Client-side (VITE_ prefix exposes to browser)
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=eyJ...your-anon-key

# Supabase - Server-side (for API routes)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=eyJ...your-service-role-key

# Google Gemini API (get from: https://aistudio.google.com/apikey)
GEMINI_API_KEY=your-gemini-api-key

# Gladia API - Listen Mode (get from: https://app.gladia.io/)
GLADIA_API_KEY=your-gladia-api-key

# Google Cloud TTS - Word pronunciation (get from: https://console.cloud.google.com/apis/credentials)
# Enable Text-to-Speech API first: https://console.cloud.google.com/apis/library/texttospeech.googleapis.com
GOOGLE_CLOUD_TTS_API_KEY=your-google-cloud-tts-api-key

# Stripe Payments (get from: https://dashboard.stripe.com/apikeys)
STRIPE_SECRET_KEY=sk_live_your-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret
VITE_STRIPE_PUBLISHABLE_KEY=pk_live_your-publishable-key

# Stripe Price IDs (get from: Products > [Product] > Pricing section)
STRIPE_PRICE_STANDARD_MONTHLY=price_xxx
STRIPE_PRICE_STANDARD_YEARLY=price_xxx
STRIPE_PRICE_STANDARD_WEEKLY=price_xxx
STRIPE_PRICE_UNLIMITED_MONTHLY=price_xxx
STRIPE_PRICE_UNLIMITED_YEARLY=price_xxx
STRIPE_PRICE_UNLIMITED_WEEKLY=price_xxx

# Google Analytics 4 (get from: https://analytics.google.com > Admin > Data Streams)
VITE_GA4_MEASUREMENT_ID=G-XXXXXXXXXX

# ElevenLabs - Voice AI (get from: https://elevenlabs.io/app/settings/api-keys)
ELEVENLABS_API_KEY=your-elevenlabs-api-key
ELEVENLABS_AGENT_ID=your-elevenlabs-agent-id

# OpenAI API (get from: https://platform.openai.com/api-keys)
OPENAI_API_KEY=sk-your-openai-api-key

# Resend - Email API (get from: https://resend.com/api-keys)
RESEND_API_KEY=re_your-resend-api-key

# Glif API - Image generation (get from: https://glif.app)
GLIF_API_KEY=your-glif-api-key

# RevenueCat - In-App Purchases (get from: https://app.revenuecat.com > API Keys)
VITE_REVENUECAT_API_KEY=appl_your-revenuecat-api-key
REVENUECAT_WEBHOOK_SECRET=your-revenuecat-webhook-secret

# App Configuration
ALLOWED_ORIGINS=https://lovelanguages.io,http://localhost:3000,http://localhost:5173

# Capacitor iOS: set to production URL so API calls work from bundled local app.
# Web deploys: leave empty (relative paths work as-is).
# The cap:sync and cap:build:ios npm scripts set this automatically.
VITE_API_BASE_URL=
