---
import SEO from '../components/SEO.astro';
import Navigation from '../components/Navigation.astro';
import BlogAnalytics from '../components/BlogAnalytics.astro';

interface Props {
  title: string;
  description: string;
  image?: string;
  article?: {
    publishedTime: string;
    modifiedTime?: string;
    author?: string;
    section?: string;
    tags?: string[];
  };
  hideNavigation?: boolean;  // Some pages have custom headers
  nativeLang?: string;
  targetLang?: string;
  canonical?: string;
}

const { title, description, image, article, hideNavigation = false, nativeLang = 'en', targetLang, canonical } = Astro.props;
---

<!DOCTYPE html>
<html lang={nativeLang}>
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="icon" href="/favicon.svg" type="image/svg+xml" />

  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;500;600;700&family=Quicksand:wght@400;500;600;700&display=swap" rel="stylesheet" />

  <SEO
    title={title}
    description={description}
    image={image}
    article={article}
    canonical={canonical}
    nativeLang={nativeLang}
    targetLang={targetLang}
  />

  <!-- Allow child layouts to inject hreflang and other head tags -->
  <slot name="head" />

  <!-- Google Analytics 4 (same property as main app) -->
  <script async src={`https://www.googletagmanager.com/gtag/js?id=${import.meta.env.VITE_GA4_MEASUREMENT_ID || 'G-ZJWLDBC5QP'}`}></script>
  <script is:inline define:vars={{ gaId: import.meta.env.VITE_GA4_MEASUREMENT_ID || 'G-ZJWLDBC5QP' }}>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());
    gtag('config', gaId, {
      cookie_domain: 'lovelanguages.io',
      cookie_flags: 'SameSite=Lax;Secure'
    });

    // Detect AI referral traffic (GEO tracking)
    (function() {
      var ref = document.referrer || '';
      var src = new URLSearchParams(window.location.search).get('utm_source') || '';
      var aiSources = ['chatgpt.com','perplexity.ai','you.com','bing.com','copilot.microsoft.com','claude.ai','gemini.google.com','phind.com','bard.google.com'];
      for (var i = 0; i < aiSources.length; i++) {
        if (ref.indexOf(aiSources[i]) !== -1 || src.indexOf(aiSources[i]) !== -1) {
          gtag('event', 'ai_referral_landing', {
            ai_source: aiSources[i],
            referrer: ref,
            landing_page: window.location.pathname,
            event_category: 'acquisition'
          });
          gtag('set', 'user_properties', { traffic_channel: 'ai_referral' });
          break;
        }
      }
    })();
  </script>

  <!-- PostHog Analytics (same project as main app) -->
  <script is:inline>
    !function(t,e){var o,n,p,r;e.__SV||(window.posthog=e,e._i=[],e.init=function(i,s,a){function g(t,e){var o=e.split(".");2==o.length&&(t=t[o[0]],e=o[1]),t[e]=function(){t.push([e].concat(Array.prototype.slice.call(arguments,0)))}}(p=t.createElement("script")).type="text/javascript",p.async=!0,p.src=s.api_host+"/static/array.js",(r=t.getElementsByTagName("script")[0]).parentNode.insertBefore(p,r);var u=e;for(void 0!==a?u=e[a]=[]:a="posthog",u.people=u.people||[],u.toString=function(t){var e="posthog";return"posthog"!==a&&(e+="."+a),t||(e+=" (stub)"),e},u.people.toString=function(){return u.toString(1)+".people (stub)"},o="init capture register register_once unregister opt_in_capturing opt_out_capturing has_opted_in_capturing has_opted_out_capturing identify alias set_config people.set people.set_once".split(" "),n=0;n<o.length;n++)g(u,o[n]);e._i.push([i,s,a])},e.__SV=1)}(document,window.posthog||[]);
    posthog.init('phc_xvUI7lnN0lwitluz83jKHGB4HPivRJ4pJ2QT58GXVlV', {
      api_host: 'https://us.i.posthog.com',
      person_profiles: 'identified_only',
      capture_pageview: true,
      capture_pageleave: true
    });
  </script>
</head>
<body class="bg-gray-50 text-gray-900 antialiased" style="font-family: 'Outfit', sans-serif;">
  {!hideNavigation && <Navigation nativeLang={nativeLang} targetLang={targetLang} />}
  <slot />
  <BlogAnalytics nativeLang={nativeLang} targetLang={targetLang} />
</body>
</html>

<style is:global>
  /* CSS Custom Properties for theming */
  :root {
    --accent-color: #FF4761;
    --accent-light: #FFE4E8;
    --accent-border: #FFB3C1;
  }

  .font-header {
    font-family: 'Quicksand', sans-serif;
  }

  .font-body {
    font-family: 'Outfit', sans-serif;
  }

  /* Prose styling for article content */
  .prose h2 {
    font-size: 1.5rem;
    font-weight: 700;
    font-family: 'Quicksand', sans-serif;
    color: #111827;
    margin-top: 3rem;
    margin-bottom: 1rem;
    padding-bottom: 0.5rem;
    border-bottom: 1px solid #e5e7eb;
  }

  @media (min-width: 768px) {
    .prose h2 {
      font-size: 1.875rem;
    }
  }

  .prose h3 {
    font-size: 1.25rem;
    font-weight: 700;
    font-family: 'Quicksand', sans-serif;
    color: #111827;
    margin-top: 2rem;
    margin-bottom: 0.75rem;
  }

  @media (min-width: 768px) {
    .prose h3 {
      font-size: 1.5rem;
    }
  }

  .prose p {
    font-size: 1.125rem;
    color: #4b5563;
    line-height: 1.75;
    margin-bottom: 1.5rem;
  }

  .prose ul {
    list-style: none;
    margin-bottom: 1.5rem;
    margin-left: 0;
    padding-left: 0;
  }

  .prose ul li {
    font-size: 1.125rem;
    color: #4b5563;
    display: flex;
    align-items: flex-start;
    gap: 0.75rem;
    margin-bottom: 0.75rem;
  }

  .prose ul li::before {
    content: "â™¥";
    color: var(--accent-color);
    margin-top: 0.125rem;
    flex-shrink: 0;
  }

  .prose ol {
    list-style: decimal;
    list-style-position: inside;
    margin-bottom: 1.5rem;
    color: #4b5563;
  }

  .prose ol li {
    margin-bottom: 0.75rem;
  }

  .prose ol li::before {
    content: none;
  }

  .prose blockquote {
    border-left: 4px solid var(--accent-color);
    background: rgba(255, 71, 97, 0.05);
    border-radius: 0 0.75rem 0.75rem 0;
    padding: 1rem 1.5rem;
    margin: 2rem 0;
    font-style: italic;
    color: #111827;
  }

  .prose a {
    color: var(--accent-color);
    font-weight: 500;
  }

  .prose a:hover {
    text-decoration: underline;
  }

  .prose strong {
    font-weight: 700;
    color: var(--accent-color);
  }

  .prose code {
    background: #f3f4f6;
    border: 1px solid #e5e7eb;
    border-radius: 0.5rem;
    padding: 0.125rem 0.5rem;
    font-family: monospace;
    font-size: 0.875rem;
    color: #111827;
  }

  .prose hr {
    margin: 3rem 0;
    border-top: 2px solid #e5e7eb;
  }

  .prose table {
    width: 100%;
    border-collapse: collapse;
    background: white;
    border-radius: 0.75rem;
    overflow: hidden;
    box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1);
    margin: 2rem 0;
  }

  .prose th {
    background: rgba(255, 71, 97, 0.1);
    color: var(--accent-color);
    font-weight: 700;
    text-align: left;
    padding: 0.75rem 1rem;
    border-bottom: 1px solid #e5e7eb;
  }

  .prose td {
    padding: 0.75rem 1rem;
    border-bottom: 1px solid #e5e7eb;
    color: #4b5563;
  }

  .prose img {
    width: 100%;
    border-radius: 1rem;
    box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
    margin: 2rem 0;
  }

  /* Utility classes */
  .text-accent {
    color: var(--accent-color);
  }

  .bg-accent {
    background-color: var(--accent-color);
  }

  .border-accent {
    border-color: var(--accent-color);
  }
</style>
