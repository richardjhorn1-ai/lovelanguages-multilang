---
interface Props {
  flag: string;
  name: string;
  title: string;
  description: string;
  speakers: string;
  fsiHours: number;
  difficultyRating: 1 | 2 | 3 | 4 | 5;
}

const { flag, name, title, description, speakers, fsiHours, difficultyRating } = Astro.props;

const filledStars = difficultyRating;
const emptyStars = 5 - difficultyRating;
---

<header class="bg-gradient-to-b from-accent/10 to-white">
  <div class="max-w-6xl mx-auto px-4 py-12 md:py-16">
    <div class="text-center max-w-3xl mx-auto">
      <span class="text-6xl md:text-7xl mb-4 block">{flag}</span>
      <h1 class="text-3xl md:text-5xl font-black font-header text-gray-900 mb-4">
        {title}
      </h1>
      <p class="text-lg md:text-xl text-gray-600 mb-8">
        {description}
      </p>

      <div class="flex justify-center gap-6 md:gap-10 text-sm">
        <div class="text-center">
          <div class="text-xl md:text-2xl font-bold text-gray-900">{speakers}</div>
          <div class="text-gray-500">Speakers</div>
        </div>
        <div class="text-center">
          <div class="text-xl md:text-2xl font-bold text-gray-900">{fsiHours}h</div>
          <div class="text-gray-500">To Fluency</div>
        </div>
        <div class="text-center">
          <div class="text-xl md:text-2xl font-bold text-accent">
            {'★'.repeat(filledStars)}{'☆'.repeat(emptyStars)}
          </div>
          <div class="text-gray-500">Difficulty</div>
        </div>
      </div>
    </div>
  </div>
</header>
