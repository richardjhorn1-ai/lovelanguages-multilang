---
interface FAQItem {
  question: string;
  answer: string;
}

interface Props {
  items: FAQItem[];
}

const { items } = Astro.props;

// Generate FAQ Schema JSON-LD
const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": items.map(item => ({
    "@type": "Question",
    "name": item.question,
    "acceptedAnswer": {
      "@type": "Answer",
      "text": item.answer
    }
  }))
};
---

<script type="application/ld+json" set:html={JSON.stringify(faqSchema)} />

<div class="my-8 space-y-4">
  <h2 class="text-2xl font-bold font-header text-gray-900 mb-6">Frequently Asked Questions</h2>
  {items.map((item, index) => (
    <details class="group bg-gray-50 rounded-xl border border-gray-200 overflow-hidden">
      <summary class="flex items-center justify-between p-4 cursor-pointer font-semibold text-gray-900 hover:bg-gray-100 transition-colors">
        <span>{item.question}</span>
        <svg class="w-5 h-5 text-gray-500 group-open:rotate-180 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
        </svg>
      </summary>
      <div class="p-4 pt-0 text-gray-700 border-t border-gray-200">
        <p>{item.answer}</p>
      </div>
    </details>
  ))}
</div>
