---
interface Props {
  title: string;
  description: string;
  image?: string;
  article?: {
    publishedTime: string;
    modifiedTime?: string;
    author?: string;
    section?: string;
    tags?: string[];
  };
  canonical?: string;
  nativeLang?: string;
  targetLang?: string;
}

// Language names for fallbacks
const LANGUAGE_NAMES: Record<string, string> = {
  en: 'English', es: 'Spanish', fr: 'French', de: 'German',
  it: 'Italian', pt: 'Portuguese', pl: 'Polish', nl: 'Dutch',
  sv: 'Swedish', no: 'Norwegian', da: 'Danish', cs: 'Czech',
  ru: 'Russian', uk: 'Ukrainian', el: 'Greek', hu: 'Hungarian',
  tr: 'Turkish', ro: 'Romanian'
};

import { canonicalUrl, normalizePathname } from '../lib/urls';

const OG_LOCALES: Record<string, string> = {
  en: 'en_US', es: 'es_ES', fr: 'fr_FR', de: 'de_DE', it: 'it_IT', pt: 'pt_PT',
  pl: 'pl_PL', nl: 'nl_NL', sv: 'sv_SE', no: 'nb_NO', da: 'da_DK', cs: 'cs_CZ',
  ru: 'ru_RU', uk: 'uk_UA', el: 'el_GR', hu: 'hu_HU', tr: 'tr_TR', ro: 'ro_RO'
};

const {
  title,
  description,
  image = '/og-image.png',
  article,
  canonical,
  nativeLang = 'en',
  targetLang
} = Astro.props;

const siteUrl = 'https://www.lovelanguages.io';
const fullUrl = canonical || canonicalUrl(Astro.url.pathname);
const ogLocale = OG_LOCALES[nativeLang] || 'en_US';
const safeImage = image || '/og-image.png';
const fullImage = safeImage.startsWith('http') ? safeImage : `${siteUrl}${safeImage}`;
const fullTitle = `${title} | Love Languages`;

// Dynamic fallbacks based on language
const targetLanguageName = targetLang ? LANGUAGE_NAMES[targetLang] : 'Language';
const defaultSection = targetLang ? `${targetLanguageName} Language Learning` : 'Language Learning';
const defaultKeywords = targetLang
  ? `${targetLanguageName}, language learning, couples, learn ${targetLanguageName}`
  : 'language learning, couples, learn languages';
---

<!-- Primary Meta Tags -->
<title>{fullTitle}</title>
<meta name="title" content={fullTitle} />
<meta name="description" content={description} />
<link rel="canonical" href={fullUrl} />

<!-- Language tags -->
<meta property="og:locale" content={ogLocale} />
{targetLang && <meta name="language" content={nativeLang} />}

<!-- Open Graph / Facebook -->
<meta property="og:type" content={article ? 'article' : 'website'} />
<meta property="og:url" content={fullUrl} />
<meta property="og:title" content={fullTitle} />
<meta property="og:description" content={description} />
<meta property="og:image" content={fullImage} />
<meta property="og:site_name" content="Love Languages" />

{article && (
  <>
    <meta property="article:published_time" content={article.publishedTime} />
    {article.modifiedTime && <meta property="article:modified_time" content={article.modifiedTime} />}
    {article.author && <meta property="article:author" content={article.author} />}
    {article.section && <meta property="article:section" content={article.section} />}
    {article.tags?.map(tag => <meta property="article:tag" content={tag} />)}
  </>
)}

<!-- Twitter -->
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:site" content="@lovelanguagesio" />
<meta name="twitter:url" content={fullUrl} />
<meta name="twitter:title" content={fullTitle} />
<meta name="twitter:description" content={description} />
<meta name="twitter:image" content={fullImage} />

<!-- Article JSON-LD is handled by ArticleLayout.astro (BlogPosting schema) -->
