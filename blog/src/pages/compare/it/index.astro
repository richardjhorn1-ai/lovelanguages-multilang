---
import BaseLayout from '../../../layouts/BaseLayout.astro';

const pageTitle = "Confronta le App per Imparare le Lingue - Love Languages vs Duolingo, Babbel e Altro";
const pageDescription = "Confronta Love Languages con Duolingo, Babbel e altre app per l'apprendimento delle lingue. Trova la migliore app per coppie che imparano 18 lingue insieme con Modalit√† Ascolto e sfide di coppia.";
const canonicalUrl = "https://www.lovelanguages.io/compare/it/";

const comparisons = [
  {
    title: "Love Languages vs Duolingo",
    description: "Confronta l'opzione gratuita gamificata con la nostra app multi-lingua pensata per le coppie. Scopri come si comportano la Modalit√† Ascolto e le funzionalit√† per coppie.",
    href: "/compare/en/love-languages-vs-duolingo",
    competitor: "Duolingo",
    competitorIcon: "owl",
    verdict: "Migliore alternativa gratuita"
  },
  {
    title: "Love Languages vs Babbel",
    description: "Confronta i corsi strutturati individuali con l'apprendimento conversazionale basato su IA per coppie. 18 lingue vs 14.",
    href: "/compare/en/love-languages-vs-babbel",
    competitor: "Babbel",
    competitorIcon: "books",
    verdict: "Migliore per apprendisti strutturati"
  }
];

const features = [
  { icon: "heart", title: "Pensata per le Coppie", description: "L'unica app linguistica progettata per imparare insieme con sfide di coppia, regali di parole e progressi condivisi." },
  { icon: "headphones", title: "Modalit√† Ascolto", description: "Impara passivamente mentre cucini, fai il pendolare o ti rilassi. Nessun'altra app ti permette di assorbire la lingua cos√¨ naturalmente." },
  { icon: "globe", title: "18 Lingue", description: "Spagnolo, francese, tedesco, italiano, portoghese, polacco e altro. Qualsiasi lingua madre verso qualsiasi lingua obiettivo." },
  { icon: "robot", title: "Conversazioni IA", description: "Conversazioni reali con IA che si adatta al tuo livello. Pratica a parlare in qualsiasi momento, non solo esercizi prestabiliti." },
  { icon: "gamepad", title: "5 Modalit√† di Gioco", description: "Battaglie con flashcard, sfide di ascolto e altro. Giochi progettati per coppie che competono e imparano insieme." },
  { icon: "gift", title: "Regali di Parole", description: "Invia vocabolario romantico al tuo partner. Un modo dolce per condividere i tuoi progressi e incoraggiarvi a vicenda." }
];

const nativeLanguages = [
  { code: "en", name: "English", href: "/compare/en/" },
  { code: "es", name: "Espa√±ol", href: "/compare/es/" },
  { code: "fr", name: "Fran√ßais", href: "/compare/fr/" },
  { code: "de", name: "Deutsch", href: "/compare/de/" },
  { code: "it", name: "Italiano", href: "/compare/it/" },
  { code: "pt", name: "Portugu√™s", href: "/compare/pt/" }
];

const jsonLd = {
  "@context": "https://schema.org",
  "@type": "CollectionPage",
  "name": "Confronta le App per Imparare le Lingue",
  "description": pageDescription,
  "url": canonicalUrl,
  "inLanguage": "it",
  "publisher": {
    "@type": "Organization",
    "name": "Love Languages",
    "url": "https://lovelanguages.io"
  }
};
---

<BaseLayout
  title={pageTitle}
  description={pageDescription}
  nativeLang="it"
>
  <link slot="head" rel="canonical" href={canonicalUrl} />
  <script type="application/ld+json" set:html={JSON.stringify(jsonLd)} />

  <!-- Hero -->
  <header class="bg-gradient-to-b from-accent/10 to-white">
    <div class="max-w-4xl mx-auto px-4 py-10 md:py-14">
      <div class="text-center">
        <h1 class="text-4xl md:text-5xl font-black font-header text-gray-900 mb-4">
          Confronta le App per Imparare le Lingue
        </h1>
        <p class="text-xl text-gray-600 mb-6">
          Confronti onesti per aiutarti a scegliere l'app giusta per imparare le lingue con il tuo partner
        </p>
        <p class="text-gray-500">
          Scopri come Love Languages si confronta con app popolari come Duolingo e Babbel
        </p>
      </div>
    </div>
  </header>

  <main class="max-w-4xl mx-auto px-4 py-12">
    <!-- Comparison Cards -->
    <section class="mb-12">
      <h2 class="text-2xl font-bold font-header text-gray-900 mb-6 text-center">
        Confronti in Primo Piano
      </h2>
      <div class="grid md:grid-cols-2 gap-6">
        {comparisons.map(comp => (
          <a
            href={comp.href}
            class="group bg-white rounded-2xl shadow-md hover:shadow-lg transition-all p-6 border border-gray-100 hover:border-accent/30"
          >
            <div class="flex items-center gap-4 mb-4">
              <img src="/favicon.svg" alt="Love Languages" class="w-12 h-12" />
              <span class="text-2xl text-gray-300">vs</span>
              <span class="text-4xl">{comp.competitorIcon === "owl" ? "ü¶â" : "üìö"}</span>
            </div>
            <h3 class="text-xl font-bold font-header text-gray-900 group-hover:text-accent transition-colors mb-2">
              {comp.title}
            </h3>
            <p class="text-gray-600 mb-3">{comp.description}</p>
            <div class="flex items-center justify-between">
              <span class="text-sm text-gray-500">
                {comp.competitor}: {comp.verdict}
              </span>
              <span class="text-accent font-medium group-hover:translate-x-1 transition-transform">
                Confronta ‚Üí
              </span>
            </div>
          </a>
        ))}
      </div>
    </section>

    <!-- Language Selector -->
    <section class="mb-12 bg-gray-50 rounded-2xl p-6">
      <h2 class="text-xl font-bold font-header text-gray-900 mb-4 text-center">
        Visualizza i Confronti nella Tua Lingua
      </h2>
      <div class="flex flex-wrap justify-center gap-3">
        {nativeLanguages.map(lang => (
          <a
            href={lang.href}
            class={`px-4 py-2 rounded-full text-sm font-medium transition-all ${
              lang.code === 'it'
                ? 'bg-accent text-white'
                : 'bg-white border border-gray-200 text-gray-700 hover:border-accent hover:text-accent'
            }`}
          >
            {lang.name}
          </a>
        ))}
      </div>
    </section>

    <!-- Why Love Languages Section -->
    <section class="mb-12 bg-gradient-to-br from-accent/5 to-pink-50 rounded-2xl p-8">
      <h2 class="text-2xl font-bold font-header text-gray-900 mb-6 text-center">
        Perch√© le Coppie Scelgono Love Languages
      </h2>
      <div class="grid md:grid-cols-3 gap-6 mb-8">
        {features.slice(0, 3).map(feature => (
          <div class="text-center">
            <div class="text-4xl mb-3">
              {feature.icon === "heart" && "üíï"}
              {feature.icon === "headphones" && "üéß"}
              {feature.icon === "globe" && "üåç"}
            </div>
            <h3 class="font-bold text-gray-900 mb-2">{feature.title}</h3>
            <p class="text-gray-600 text-sm">{feature.description}</p>
          </div>
        ))}
      </div>
      <div class="grid md:grid-cols-3 gap-6">
        {features.slice(3, 6).map(feature => (
          <div class="text-center">
            <div class="text-4xl mb-3">
              {feature.icon === "robot" && "ü§ñ"}
              {feature.icon === "gamepad" && "üéÆ"}
              {feature.icon === "gift" && "üéÅ"}
            </div>
            <h3 class="font-bold text-gray-900 mb-2">{feature.title}</h3>
            <p class="text-gray-600 text-sm">{feature.description}</p>
          </div>
        ))}
      </div>
    </section>

    <!-- CTA -->
    <div class="bg-gradient-to-r from-accent to-pink-500 rounded-2xl p-8 text-center text-white">
      <h2 class="text-2xl md:text-3xl font-bold font-header mb-3">
        Scopri Perch√© le Coppie Ci Adorano
      </h2>
      <p class="text-white/90 mb-6 text-lg">
        Coaching IA, Modalit√† Ascolto, sfide di coppia e giochi progettati per imparare 18 lingue insieme.
      </p>
      <a
        href="/"
        class="inline-block bg-white text-accent font-bold px-8 py-4 rounded-full hover:shadow-lg hover:scale-105 transition-all text-lg"
      >
        Inizia a Imparare Insieme ‚Üí
      </a>
    </div>
  </main>

  <!-- Footer -->
  <footer class="bg-gray-100 border-t border-gray-200 py-12">
    <div class="max-w-4xl mx-auto px-4 text-center">
      <a href="/" class="inline-flex items-center gap-2 text-2xl font-bold font-header text-accent mb-4">
        <img src="/favicon.svg" alt="" class="w-8 h-8" />
        Love Languages
      </a>
      <p class="text-gray-600 mb-6">L'app linguistica per coppie</p>
      <nav class="flex justify-center gap-6 text-sm text-gray-500">
        <a href="/learn/it/" class="hover:text-accent">Blog</a>
        <a href="/tools" class="hover:text-accent">Strumenti</a>
        <a href="/compare/it/" class="hover:text-accent">Confronta</a>
        <a href="/terms" class="hover:text-accent">Termini</a>
        <a href="/privacy" class="hover:text-accent">Privacy</a>
      </nav>
    </div>
  </footer>
</BaseLayout>
